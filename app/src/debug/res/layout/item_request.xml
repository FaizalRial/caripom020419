<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:id="@+id/rl_layout">
    <TextView
        android:id="@+id/tv_nama"
        android:layout_marginLeft="4dp"
        android:textSize="20dp"
        android:text="Nama"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_jenis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:textSize="15dp"
        android:text="Jenis"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/tv_jam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:textSize="15dp"
        android:text="Jam"
        android:textStyle="italic"/>
</LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:layout_marginLeft="4dp">
        <TableRow>
            <TextView android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Pertamax               :"
                android:textSize="14dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_pertamax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textSize="14dp"
                android:text="Pertamaxid"/>
        </TableRow>
        <TableRow>
            <TextView android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Pertalite                 :"
                android:textSize="14dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_pertalite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textSize="14dp"
                android:text="Pertaliteid"/>
        </TableRow>
        <TableRow>
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Solar                       :"
            android:textSize="14dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_solar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textSize="14dp"
            android:text="Solarid"/>
        </TableRow>

    </TableLayout>
</LinearLayout>